<h2><%= @unit[:name] %> </h2>
<% byebug %>
<% if current_account && current_account.unit == @unit %>
  <p>Você é membro desta unidade.</p>
   <%= link_to "Personals na #{@unit.name}", appointment_path, class: "btn btn-black btn-sm" %>
<% else %>
  <% if  current_account && current_account.unit%>
    <%= link_to 'Mudar-se Para Esta Unidade', add_unit_customer_path(@unit), method: :post, class: "btn btn-black btn-sm" %>
  <% else %>
    <%= link_to 'Matricular-se Nesta Unidade', add_unit_customer_path(@unit), method: :post, class: "btn btn-black btn-sm" %>
  <% end %>
<% end %>

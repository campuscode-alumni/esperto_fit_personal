<%= form_for @profile do |f| %>
  <div class="row">
    <div class="col form-group">
      <%= f.label :first_name, class: "col-form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="col form-group">
      <%= f.label :last_name, class: "col-form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :nickname, class: "col-form-label" %>
      <%= f.text_field :nickname, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :date_of_birth, class: "col-form-label" %>
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>

    <div class="col form-group">
      <%= f.label :gender, class: "col-form-label" %>
      <%= f.text_field :gender, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :address, class: "col-form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="col form-group">
      <%= f.label :contact, class: "col-form-label" %>
      <%= f.text_field :contact, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :payment_method, t(:recieve_method), class: "col-form-label" %>
      <%= f.text_field :payment_method, class: "form-control" %>
    </div>

    <div class="col form-group">
      <%= f.label :work_document, class: "col-form-label" %>
      <%= f.text_field :work_document, class: "form-control" %>
    </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit t(:submit_btn), class: "btn btn-black btn-sm" %>
  </div>
<% end %>

<%= flash[:notice] %>
<%= form_for @schedule do |f| %>
  <%= f.label :unit_id, 'Unidade' %> 
  <%= f.collection_select(:unit_id, Unit.all, :id, :name) %>

  <%= f.label :date, 'Dia da semana' %> 
  <%= f.date_field :date  %>

  <%= f.label :start, 'Horário de início' %> 
  <%= f.time_field :start %>

  <%= f.label :finish, 'Horário de término' %> 
  <%= f.time_field :finish  %>

  <%= f.label :price, 'Valor' %> 
  <%= f.number_field :price  %>

  <%= f.submit "Salvar" %>
<% end %>
<h2>Cadastrar nova agenda</h2>
<%= flash[:notice] %>
<%= form_for @schedule do |f| %>
  <div class="form-group">
  <%= f.label :unit_id, class: "col-form-label" %> 
  <%= f.collection_select(:unit_id, Unit.all, :id, :name, {class: "form-control"}) %>
  </div>

  <div class="form-group">
  <%= f.label :date, class: "col-form-label" %> 
  <%= f.date_field :date, class: "form-control col-auto"  %>
  </div>

  <div class="form-group">
  <%= f.label :start, class: "col-form-label" %> 
  <%= f.time_field :start, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
  <%= f.label :finish, class: "col-form-label" %> 
  <%= f.time_field :finish, class: "form-control col-auto"  %>
  </div>

  <div class="form-group">
  <%= f.label :price, class: "col-form-label" %> 
  <%= f.number_field :price, class: "form-control col-auto"  %>
  </div>

  <div class="form-group">
  <%= f.submit "Salvar", class: "btn btn-sm btn-black" %>
  </div>
<% end %>
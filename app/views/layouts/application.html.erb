<!DOCTYPE html>
<html>
  <head>
    <title>Academia EspertoFit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <nav class="row">
        <div id="hello" class="col-md-4">
          <ul class="link_list">
            <li>
              <span id="logo"><%= link_to 'esperto', root_path %><%= link_to 'fit', root_path, class: "accent" %></span>
            </li>
            <% if account_signed_in? %>
            <li>
              Ol√°, <%= link_to current_account.email, profile_path(current_account) %>
            </li>
            <% end %>
          </ul>
        </div>

        <div id="top-menu" class="col-md-8 text-right">
          <ul class="link_list">
            <% if account_signed_in? %>
              <% if current_account.type == 'Personal' %>
                <li><%= link_to t(:new_shcedule), new_schedule_path %></li>
                <li><%= link_to t(:my_schedules), my_schedule_path %></li>
                <li><%= link_to t(:pending_appointments), pending_appointments_path %></li>
              <% else %>
                <li><%= link_to t(:new_appointment), personals_path %></li>
              <% end %>
              <li><%= link_to t(:units), units_path %></li>
              <li><%= link_to t(:logout), destroy_account_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t(:units), units_path %></li>
              <li><%= link_to t(:new_account), new_account_registration_path %></li>
              <li><%= link_to t(:login), new_account_session_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <main class="row">
        <div id="content" class="col-md-12 mt-2">
          <% if flash[:notice]%>
            <p class="notice"><%= notice %></p>
          <% end %>
          <% if flash[:alert]%>
          <p class="alert"><%= alert %></p>
          <% end %>
          <%= yield %>
        </div>
      </main>

      <footer class="row mt-2">
        <div class="col-md-12 text-center">
          <ul class="link_list">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'Link1', root_path %></li>
            <li><%= link_to 'Link2', root_path %></li>
          </ul>
          <hr>
          <span id="logo">esperto<span class="accent">fit</span></span>
        </div>
      </footer>
    </div>
  </body>
</html>
